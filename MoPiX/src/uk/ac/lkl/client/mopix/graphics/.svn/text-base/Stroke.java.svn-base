package uk.ac.lkl.client.mopix.graphics;

import uk.ac.lkl.client.Utils;

import com.google.gwt.canvas.dom.client.CssColor;

public class Stroke {

    private final CssColor color;

    private final int width;

    public Stroke(int red, int green, int blue, double alpha, int width) {
        super();
        this.color = Utils.createColor(red, green, blue, alpha);
        this.width = width;
    }

    public CssColor getColor() {
        return color;
    }

    public int getWidth() {
        return width;
    }

}
